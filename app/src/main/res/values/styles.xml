<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="itemIconTint">?attr/colorOnSurface</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.Settings.Label" parent="">
        <item name="android:textColor">@color/grey_cloud</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ShapeAppearance.App.Corner.RightCut" parent="">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.App.Corner.LeftCut" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonGravity">bottom</item>
        <item name="android:background">#2B2B2B</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.App.Dialog.Body.Text
        </item>
    </style>

    <style name="TextAppearance.App.Dialog.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.App.Dialog.Body.Text" parent="@style/MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.PowerTraining.Button" parent="">
        <item name="android:background">@drawable/power_training_button_bg_selector</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.AppTheme.NumberPicker" parent="Theme.TrainingCompanion">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AppTheme.NumberPicker.ColorOnPrimary">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.App.Actions.CardView.Item" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/actions_card_view_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="iconPadding">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">14sp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">?attr/colorOnSurfaceVariant</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.App.Actions.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/chinese_black</item>
        <item name="cardCornerRadius">@dimen/actions_card_view_corner_size</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/mine_shaft</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0.7dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.White">
        <item name="boxStrokeColor">@color/input_text_white_stroke_color</item>
        <item name="android:textColorHint">#4DFFFFFF</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">#B3FFFFFF</item>
    </style>

    <style name="Widget.App.TextInputLayout.White.OutlinedBox">
        <item name="background">@color/eerie_black</item>
    </style>

    <style name="Widget.App.TextInputLayout.Primary">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/input_text_stroke_color_primary</item>
    </style>

    <style name="Widget.App.Material3.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/material_button_color_selector</item>
    </style>

    <style name="ShapeAppearance.App.Corner.TopLeft" parent="">
        <item name="cornerSizeTopLeft">12dp</item>
    </style>

    <style name="ShapeAppearance.App.Round8" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.Round4" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="TextAppearance.App.RobotoMedium" parent="">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.App.TextView.PlanFact" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/plan_fact_item_shape</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.FAB" parent="">
        <item name="fabCustomSize">64dp</item>
        <item name="maxImageSize">28dp</item>
    </style>

    <style name="Widget.App.FAB.White">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/orange</item>
    </style>

    <style name="Widget.App.FAB.Orange">
        <item name="android:backgroundTint">#AB4707</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.App.Button.LargeBottom" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/big_button_height</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="Widget.App.Button.LargeBottom.Primary">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="iconTint">?colorOnPrimary</item>
    </style>

    <style name="Widget.App.Button.LargeBottom.Secondary">
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="iconTint">?colorOnSecondary</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="TextAppearance.App.PopupMenu.Small" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.PopupMenu.Large" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.ContextMenu" parent="Widget.Material3.PopupMenu.ContextMenu">
        <item name="android:colorBackground">?attr/colorSurfaceVariant</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>