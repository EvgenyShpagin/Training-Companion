                <TextView
                    style="@style/TextAppearance.App.Settings.Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_preferences_caps" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/settings_group_shape"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- TODO: Remove alpha=0.3 on update -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginStart="20dp"
                            android:alpha="0.3"
                            android:drawablePadding="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/setting_language"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_language_24"
                            app:drawableTint="@color/white" />

                        <!-- TODO: Remove alpha=0.3 on update -->
                        <TextView
                            android:id="@+id/language_text"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginEnd="16dp"
                            android:alpha="0.3"
                            android:drawablePadding="8dp"
                            android:gravity="center|end"
                            android:text="@{context.getString(viewModel.languageTextRes)}"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableEndCompat="@drawable/ic_arrow_forward_12"
                            app:drawableTint="@color/white" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="?attr/colorOutline" />

                    <LinearLayout
                        android:id="@+id/units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/setting_units"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_units_24"
                            app:drawableTint="@color/white" />

                        <TextView
                            android:id="@+id/units_text"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginEnd="16dp"
                            android:drawablePadding="8dp"
                            android:gravity="center|end"
                            android:text="@{context.getString(viewModel.unitsTextRes)}"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableEndCompat="@drawable/ic_arrow_forward_12"
                            app:drawableTint="@color/white" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="?attr/colorOutline" />

                    <LinearLayout
                        android:id="@+id/sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/setting_sound"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_sound_24"
                            app:drawableTint="@color/white" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/sound_switch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="24dp"
                            android:checked="@{viewModel.soundEnabled}"
                            android:clickable="false"
                            android:gravity="end|center_vertical" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="?attr/colorOutline" />

                    <LinearLayout
                        android:id="@+id/vibration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/setting_vibration"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_vibration_24"
                            app:drawableTint="@color/white" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/vibration_switch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="24dp"
                            android:checked="@{viewModel.vibrationEnabled}"
                            android:clickable="false"
                            android:gravity="end|center_vertical" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextAppearance.App.Settings.Label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_account_caps" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/settings_group_shape"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/clear_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- TODO: Remove alpha=0.3 on update -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginStart="20dp"
                            android:alpha="0.3"
                            android:drawablePadding="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/setting_clear_statistics"
                            android:textColor="@color/sea_pink"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_delete_24"
                            app:drawableTint="@color/sea_pink" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerColor="?attr/colorOutline" />

                    <LinearLayout
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/setting_logout"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/ic_logout_24"
                            app:drawableTint="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>