<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <merge
        android:id="@+id/actions_card_view_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/actions_card_view_layout"
            android:layout_width="@dimen/actions_card_view_width"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/actions_card_view_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_title_height"
                android:alpha="0.7"
                android:gravity="center"
                android:text="@string/actions_card_view_title"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_button_1"
                style="@style/Widget.App.Actions.CardView.Item"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_button_2"
                style="@style/Widget.App.Actions.CardView.Item"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_button_3"
                style="@style/Widget.App.Actions.CardView.Item"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_button_4"
                style="@style/Widget.App.Actions.CardView.Item"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actions_card_view_close_button_height"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/button_close_actions_content_description"
                android:src="@drawable/ic_close_24"
                app:tint="?attr/colorError" />

        </LinearLayout>

    </merge>
</layout>